@page
@model RazorPizzeria.Pages.PizzaModel
@{
}


<div class="text-center">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">Our Greate collection of Pizzas</h1>
        <h4>Choose one, or try our Pizza Builder! Then Order One!</h4>
        <h4>No need to give any of your ditails!</h4>
        <h4>We already know everithing!</h4>
        <p class="smallText"><i>Only one Pizza per order.</i></p>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 mb-5 mt-3">
                <div class="w-100 row makeYourOwnDiv">
                    <div class="col-4">
                        <img src="~/images/Pizzas/Create.png" class="w-100" />
                    </div>
                    <div class="col-8 align-items-center">
                        <div class="align-middle makeYourOwnText">
                            <h3 style="text-align:left;">Create your own Pizza</h3>
                            <p style="text-align: left;">Make your own pizza with our PizzaMaker!</p>
                            <a class="btn btn-primary" style="float:left;" asp-area="" asp-page="Forms/CustomPizza">Try Now!</a>
                        </div>
                    </div>
                </div>
            </div>
            @foreach (var pizza in @Model.fakePizzaDB)
            {
                var imagePath = "~/images/Pizzas/" + (pizza.ImageTile + ".png");

                <div class="col-4 mb-4 mt-2">
                    <a class="pizza-img"
                    asp-area="" 
                    asp-page="Checkout/Checkout" 
                    asp-route-ImageTile="@pizza.ImageTile"
                    asp-route-PizzaName="@pizza.PizzaName" 
                    asp-route-PizzaPrice="@pizza.FinalePrice">
                    <img src="@imagePath" class="makeYourOwnDiv w-100" asp-append-version="true" />
                </a>
                    <br />
                </div>
            }

        </div>
    </div>
</div>